<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.morpheus.catalogomorpheus.Fabi">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>
    <ImageView
        android:id="@+id/img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/spinner"
        android:layout_alignParentLeft="true"
        android:src="@drawable/bombon"/>

    <TextView
        android:id="@+id/Nombre"
        android:layout_marginTop="20dp"
        android:text="Titulo 1"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_marginRight="50dp"
        android:paddingRight="100dp"
       android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/pelicula"
        android:layout_marginTop="20dp"
        android:text="Titulo 2"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Nombre"
        android:layout_marginRight="50dp"
        android:paddingRight="100dp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/papel"
        android:layout_marginTop="20dp"
        android:text="Titulo 3"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pelicula"
        android:layout_marginRight="50dp"
        android:paddingRight="100dp"
        android:layout_alignParentRight="true"
        />

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img"
        ></ListView>



</RelativeLayout>
