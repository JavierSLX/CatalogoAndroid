<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.morpheus.catalogomorpheus.AngelActivity">
    <Spinner
        android:id="@+id/spinnerAngel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imagenAngel"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/spinnerAngel"/>
    <TextView
        android:id="@+id/nombreTV"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerAngel"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/imagenAngel"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/apareceTV"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreTV"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/imagenAngel"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/rolTV"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/apareceTV"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/imagenAngel"
        android:layout_marginTop="10dp"/>
    <ListView
        android:layout_marginTop="10dp"
        android:layout_below="@id/imagenAngel"
        android:id="@+id/listaAngel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>
</RelativeLayout>
